@model LearnNet8ShoppingWebMVCB01.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Đăng Ký";
}

<h1>DangKy</h1>


<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Billing details</h1>
            <form asp-action="DangKy">
                <div class="row">
                    <div class="row">
